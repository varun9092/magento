<?xml version="1.0"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">magdev_banner_banner_listing.magdev_banner_banner_listing_data_source</item>
            <item name="deps" xsi:type="string">magdev_banner_banner_listing.magdev_banner_banner_listing_data_source</item>
        </item>
        <item name="spinner" xsi:type="string">banner_columns</item>
    </argument>

    <dataSource name="magdev_banner_banner_listing_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">            
            <argument name="class" xsi:type="string">Magdev\Banner\Ui\DataProvider\BannerDataProvider</argument>
            <argument name="name" xsi:type="string">magdev_banner_banner_listing_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">banner_id</argument>
            <argument name="requestFieldName" xsi:type="string">banner_id</argument>
            <argument name="collection" xsi:type="object">Magdev\Banner\Model\ResourceModel\Banner\Collection</argument>
        </argument>
    </dataSource>
    
    <!--dataSource name="magdev_banner_banner_listing_data_source" component="Magento_Ui/js/grid/provider">
        
        <aclResource>Magdev_Banner::banner</aclResource>
        <dataProvider class="Magdev\Banner\Model\Banner\DataProvider" name="magdev_banner_banner_listing_data_source">
            <settings>
                <requestFieldName>banner_id</requestFieldName>
                <primaryFieldName>banner_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource-->

    <columns name="banner_columns">
        <column name="banner_id">
            <settings>
                <filter>text</filter>
                <label>ID</label>
            </settings>
        </column>
        <column name="title">
            <settings>
                <filter>text</filter>
                <label>Title</label>
            </settings>
        </column>
        <!--column name="status">
            <settings>
                <filter>select</filter>
                <label>Status</label>
                <options class="Magento\Config\Model\Config\Source\Yesno"/>
            </settings>
        </column>
        <column name="created_at">
            <settings>
                <filter>dateRange</filter>
                <label>Created At</label>
            </settings>
        </column-->
        <actionsColumn name="actions" class="Magdev\Banner\Ui\Component\Listing\Column\Actions">
			<settings>
				<indexField>banner_id</indexField>
				<label translate="true">Actions</label>
			</settings>
		</actionsColumn>

    </columns>
</listing>

